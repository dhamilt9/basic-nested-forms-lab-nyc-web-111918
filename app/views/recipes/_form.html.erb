<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>
  <br>
  <%= f.fields_for :ingredients do |ingredient| %>
    Ingredient name: <%= ingredient.text_field :name %>
    Ingredient quantity: <%= ingredient.text_field :quantity %>
    <br>
  <% end %>
  <%= f.submit "Create recipe" %>
<% end %>
